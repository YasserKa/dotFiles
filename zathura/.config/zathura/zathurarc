# Documentation: https://pwmt.org/projects/zathura/documentation/
set selection-clipboard clipboard
# Vertical center page after scrolling
set vertical-center true
# Make Highlighted text more visible
set highlight-transparency 0.6

map ; focus_inputbar :

# yank the file as an org link
unmap y
map yo exec /home/yasser/.config/zathura/yank_zathura_file_org

# yank link to clipboard
map yl feedkeys c

set synctex true
