# General
auto-reload yes
confirm-mark-all-feeds-read no
confirm-mark-feed-read no
reload-time 120
reload-threads 4
download-retries 4
download-timeout 10
prepopulate-query-feeds yes
feed-sort-order title
goto-next-feed no

confirm-exit no
cleanup-on-quit yes

external-url-viewer "urlview"
browser qutebrowser

text-width 80

# Aesthetics
color info default default
color listnormal yellow default
color listfocus blue default bold
color listfocus_unread blue default bold

# Bindings
unbind-key g
bind-key g home all
bind-key G end all

unbind-key ^U
unbind-key ^D
bind-key ^U pageup all
bind-key u pageup all
bind-key ^D pagedown all
bind-key d pagedown all

bind-key j down feedlist
bind-key j next articlelist
bind-key j down article
bind-key k up feedlist
bind-key k prev articlelist
bind-key k up article
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key h quit articlelist
bind-key h quit article
bind-key l open feedlist
bind-key l open articlelist

unbind-key s
bind-key s sort all


