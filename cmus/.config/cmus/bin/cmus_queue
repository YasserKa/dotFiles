#!/usr/bin/env bash
#
# Clear queue, make a new one, shuffle it and queue next music track

cmus-remote -c -q 
cmus-remote -q "$@"
# Wait until the music tracks are queued else randomizing won't work
while [[ ! "$(cmus-remote -C "save -q -")" ]]; do : ; done
cmus-remote -C "rand"
cmus-remote --next
