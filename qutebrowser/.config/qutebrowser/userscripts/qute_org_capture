#!/usr/bin/env bash

$XDG_CONFIG_HOME/i3/set_i3_focus_on_window_activation_configuration none
emacsclient --no-wait "org-protocol://capture?url=$QUTE_URL&title=$QUTE_TITLE"

if (( $? == 0 )); then
    echo ":message-info 'Note captured'" >> $QUTE_FIFO
    $XDG_CONFIG_HOME/i3/set_i3_focus_on_window_activation_configuration smart
else
    echo ":message-error 'Note not captured'" >> $QUTE_FIFO
fi
