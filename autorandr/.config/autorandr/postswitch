#!/usr/bin/env bash

"$XDG_CONFIG_HOME/i3/generate_i3_monitor_setup"
# Reloading sway, reloads shikane; to avoid infinite loop in this case, don't reload sway
[[ ! -e /tmp/flag_sway_reloaded ]] && i3-msg reload || rm /tmp/flag_sway_reloaded

# Need to restart for i3 & moving workspaces around
[[ -n "${DISPLAY}" ]] && i3-msg restart && "$XDG_CONFIG_HOME/i3/move_i3_workspaces"
