# Dunst
# Close notification
super + space
    dunstctl close

# Redisplay last message
super + apostrophe
    dunstctl history-pop

# Execute default actions
super + shift + apostrophe
    dunstctl action

# Capture a note using org mode
super + e
    emacsclient --socket-name="$EMACS_ORG_SOCKET" --no-wait --eval '(yequake-toggle "org-capture-yeq")'

# Execute default actions
super + shift + u
    /home/yasser/bin/insert_link

# Show context menua
super + shift + semicolon
    dunstctl context

# Mulimedia controls
XF86AudioLowerVolume
    pactl set-sink-volume @DEFAULT_SINK@ -1000

XF86AudioRaiseVolume
    pactl set-sink-volume @DEFAULT_SINK@ +1000

XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86AudioPause
    playerctl play-pause

XF86AudioNext
    playerctl next

XF86AudioPrev
    playerctl previous

XF86AudioForward
    playerctl position "1+"

XF86AudioRewind
    playerctl position "1-"

XF86AudioMicMute
    pactl set-source-mute @DEFAULT_SOURCE@ toggle

# ZMK doesn't have have XF86AudioMicMute, so this is used instead
XF86Phone
    pactl set-source-mute @DEFAULT_SOURCE@ toggle
