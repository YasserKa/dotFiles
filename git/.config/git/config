[user]
    email = yasser.kaddoura19@gmail.com
    name = Yasser Kaddoura
    signingKey = 116F256041ACF55D33334B77F69626AEBEC29AA7

[init]
    defaultBranch = main

[core]
    editor = nvim
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true  # use n and N to move between diff sections
    side-by-side =true
    line-numbers = true

[push]
    default = simple

[pull]
    rebase = true

[merge]
    conflictstyle = diff3
    ff = false
    log = true

[diff]
    colorMoved = default
    renames = copies

[log]
    decorate = full

[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
    grep = auto

[alias]
    s = status -s
    sv = status --verbose

    # Branch
    co = checkout
    cob = checkout -b # Create a branch and switch to it
    del = branch -D # Remove a branch
    br = branch --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(contents:subject) %(color:green)(%(committerdate:relative)) [%(authorname)]' --sort=-committerdate

    save = !git add -A && git commit -m 'chore: commit save point
    # Reset
    undo = reset HEAD~1 --mixed 
    res = !git reset --hard

    done = !git push origin HEAD
    amend = commit --amend

    cm = commit -m 
    cmnv = commit -m --no-verify
    # Stash
    stash-pop-if-not-empty = "![[ $(git stash list | wc -l) -gt 0 ]] && git stash pop || true"
    stashreset = "!git stash save && git fetch && git reset --hard FETCH_HEAD && git stash-pop-if-not-empty"

    # Don't use vimpager
    d = "!PAGER=less && git diff"
    # Search commits
    se = "!git rev-list --all | xargs git grep -F"
    se10 = "!git rev-list --all --max-count 10 | xargs git grep -F"
    se20 = "!git rev-list --all --max-count 20 | xargs git grep -F"

    # Logs
    last = show --stat HEAD
    lg = !git log --pretty=format:\"%C(magenta)%h%Creset -%C(red)%d%Creset %s %C(dim green)(%cr) [%an]\" --abbrev-commit -30
    countcommits = shortlog -sn --no-merges
    graph = log --graph --oneline --decorate

[help]
   ; execute corrected commands immediately
    autocorrect = -1

[commit]
    gpgSign = true

[gpg]
    program = /home/yasser/.config/git/gpg

[tag]
    forceSignAnnotated = true

[github]
    user = YasserKa

[credential]
    helper = store

[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
