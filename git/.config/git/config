    name = Yasser Kaddoura
    signingKey = 116F256041ACF55D33334B77F69626AEBEC29AA7

[init]
    defaultBranch = main

[core]
    editor = nvim
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true  # use n and N to move between diff sections
    side-by-side =true
    line-numbers = true

[push]
    default = simple

[pull]
    rebase = true

[merge]
    conflictstyle = diff3
    ff = false
    log = true

[diff]
    colorMoved = default
    renames = copies

[log]
    decorate = full

[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
    grep = auto

[alias]
    s = status
    # Don't use vimpager
    d = "!PAGER=less && git diff"
    last = show --stat HEAD
    countcommits = shortlog -sn --no-merges
    graph = log --graph --oneline --decorate
    stash-pop-if-not-empty = "![[ $(git stash list | wc -l) -gt 0 ]] && git stash pop || true"
    stashreset = "!git stash save && git fetch && git reset --hard FETCH_HEAD && git stash-pop-if-not-empty"
    amend = commit --amend

[help]
   ; execute corrected commands immediately
    autocorrect = -1

[commit]
    gpgSign = true

[tag]
    forceSignAnnotated = true

[github]
    user = YasserKa

[credential]
    helper = store

[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
