#!/usr/bin/env bash
#######################################
# Create a timer with progress bar
# Arguments:
#   $1: seconds to wait
#######################################
#
# Dependencies:
# pv

main() {
	local -r SECONDS="$1"
	echo "Interval: $(date +%H:%M) -> $(date -d "+$SECONDS seconds" +%H:%M)"
	sleep "$SECONDS" | pv -et && notify-send --expire-time=$((5 * 60 * 1000)) -- "TIMER UP!"
}

(($# > 1)) && echo "Only need one option - seconds" && exit 1

main "$@"
