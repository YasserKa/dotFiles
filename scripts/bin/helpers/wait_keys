#!/usr/bin/env python
#
# Wait for hotkeys press
# Takes hotkeys as arguments
# E.g. wait_keys '<esc>' '<ctrl>+m'

import sys
from pynput import keyboard

stop_program = False


def exit():
    global stop_program
    stop_program = True


hotkeys = {arg: exit for arg in sys.argv[1:]}

with keyboard.GlobalHotKeys(hotkeys) as h:
    print(stop_program)
    while not stop_program:
        pass
