#!/usr/bin/env bash
#
# Copy to clipboard in X or Wayland
# Arguments:
#  $@ Text to be copied
# Dependencies: xsel wl-cliboard

# Capture from stdin if available and not empty
if [[ -p /dev/stdin ]]; then
    stdin="$(cat)"
    [[ -n "$stdin" ]] && set -- "$stdin"
fi

if [[ -n "${WAYLAND_DISPLAY}" ]]; then
	wl-copy "$@"
else
	printf "%s" "$@" | xsel --input --clipboard
fi
