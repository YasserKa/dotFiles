#!/usr/bin/env bash

DOC_NAME="$1"
PAGE_NUM="$2"

PATHS_TO_SEARCH=("${HOME}")

DOC_PATH="$(fd --no-ignore-vcs --regex "${DOC_NAME}.*.(pdf|djvu|epub)$" "${PATHS_TO_SEARCH[*]}" | head -1)"

FILETYPE=$(xdg-mime query filetype "$DOC_PATH")
APPLICATION=$(xdg-mime query default "$FILETYPE")

if [[ "$APPLICATION" == "zathura.desktop" ]]; then
	CMD="zathura '$DOC_PATH'"
	if [[ -n "$PAGE_NUM" ]]; then
		CMD+=" -P $PAGE_NUM"
	fi
fi

bash -ic "$CMD"
