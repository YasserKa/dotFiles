#!/bin/bash

if [[ -z $(ps aux | grep -v "grep" | grep "notes/general.md") ]]; then
    (nohup alacritty --title general_notes -e nvim $HOME/notes/general.md >/dev/null 2>&1 &)
    sleep .7
    i3-msg '[title="general_notes"] scratchpad show'
else
    i3-msg '[title="general_notes"] scratchpad show'
fi
