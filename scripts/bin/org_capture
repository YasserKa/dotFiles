#!/usr/bin/env bash
#
# Captures a URL and its title to org mode while not focusing the Emacs window
#
# Dependencies: Emacs, i3 or sway
#
# INPUT:
#   URL (MANDATORY)
#   TITLE

(($# == 0)) && { notify-send --urgency=critical "Org capture requires at least a URL" && exit 1; }

URL="$1"
TITLE="$2"

"$XDG_CONFIG_HOME/i3/set_i3_focus_on_window_activation_configuration" none 2 &
disown

emacsclient --socket-name="org-mode" --no-wait "org-protocol://capture?url=$URL&title=$TITLE"
