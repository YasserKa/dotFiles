#!/bin/bash
# Dependencies: cuneiform scrot rofi links
# Reference: https://gist.github.com/Amooti73/9dac66ffee26f93baf211ab8c05949cd
set -e

SCR_IMG=$(mktemp)
trap 'rm $SCR_IMG*' EXIT

scrot -s "$SCR_IMG.png"
# Increase detection rate
mogrify -modulate 100,0 -resize 400% "$SCR_IMG.png"
cuneiform "$SCR_IMG.png" -o "$SCR_IMG.txt" &> /dev/null

phrase=$(cat $SCR_IMG.txt)

rofi="rofi -dmenu -yoffset 100 -location 2"

pag() {                                                 \
    sed -e 1d                                           \
        -e 's; _\([A-Z]\); \1;p'                        \
        -e '/^$/d' -e '/^-->/d'                         \
    | eval "$rofi" -l 20 -p 'Done'
}

{
    sdcv -n --utf8-input --utf8-output "$phrase"
    printf "Urban\n"
    links -dump "https://www.urbandictionary.com/define.php?term=$phrase" \
        | sed -n '1,/Top def/d;/Get the mug/q;p'
} | pag
