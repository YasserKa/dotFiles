#!/usr/bin/env bash
#
# Create i3 config file assigning each workspace to a display

# shellcheck disable=SC1091
source "$HOME/bin/helpers/monitor_variables"

output="# Generated by $0
workspace \$browser output $MONITOR_MIDDLE
workspace \$coding output $MONITOR_MIDDLE
workspace \$notes output $MONITOR_MIDDLE
workspace \$video output $MONITOR_MIDDLE
workspace \$documents output $MONITOR_MIDDLE"

[[ -n "$MONITOR_LEFT" ]] && output="$output

workspace \$wp6 output $MONITOR_LEFT
workspace \$wp9 output $MONITOR_LEFT
workspace \$social output $MONITOR_LEFT"

[[ -n "$MONITOR_RIGHT" ]] && output="$output

workspace \$git output $MONITOR_RIGHT"

echo -e "$output" >|"$XDG_CONFIG_HOME/i3/monitor_setup"
