#!/bin/bash

DIR="$HOME/Documents/notes"

function enoughArgs {
	if [ $1 -lt 2 ]
	then
		echo "Not enough args!"
		exit 0
	fi
}

if [ ! -d "$DIR" ]
then
	echo "$DIR not found!"
	exit 1;
fi

while test $# -gt 0; do
	case "$1" in
		ls)
			ls -1 $DIR -I note -I LICENSE -I README.md
			exit 0
			;;
		edit)
			enoughArgs $#
			if [ -r "$DIR/$2" ]
			then
				vim "$DIR/$2"
			else
				echo "$DIR/$2 is not found!"
			fi
			exit 0
			;;
		add)
			enoughArgs $#
			if [ ! -r "$DIR/$2" ]
			then
				vim "$DIR/$2"
			else
				echo "$DIR/$2 is already there!"
			fi
			exit 0
			;;
		cat)
			enoughArgs $#
			if [ -r "$DIR/$2" ]
			then
				cat "$DIR/$2"
			else
				echo "$DIR/$2 is not found!"
			fi
			exit 0
			;;
		*)
			echo "$1 command not found!"
			exit 0
			;;
	esac
done

