# Setting fd as the default source for fzf
export FZF_DEFAULT_COMMAND='fd --follow --hidden --exclude .git'
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
# CTRL-Y to copy the command into clipboard
export FZF_CTRL_R_OPTS="
--preview 'echo {}' --preview-window up:3:hidden:wrap
--bind 'ctrl-y:execute-silent(echo -n {2..} | xclip -selection clipboard)+abort'
--bind 'ctrl-/:change-preview-window(down|hidden|)'
--color header:italic
--header 'Press CTRL-Y to copy command into clipboard'"
export FZF_DEFAULT_OPTS="--color=light,bg+:#363D4B,fg+:white --bind='ctrl-n:down,ctrl-p:up,ctrl-j:accept,alt-j:preview-page-down,alt-k:preview-page-up,alt-n:next-history,alt-p:prev-history'"
# export FZF_DEFAULT_OPTS="--bind=,alt-n:next-history, alt-p:prev-history'"
# FZF_DEFAULT_OPTS="--bind='ctrl-n:down,ctrl-p:up,ctrl-j:accept,alt-n:next-history,alt-p:prev-history'"
 # --preview='bat --color=always --style=numbers --theme gruvbox-dark {}' 

# Use ~~ as the trigger sequence instead of the default **
# export FZF_COMPLETION_TRIGGER='~~'

# Print tree structure in the preview window
export FZF_ALT_C_COMMAND="fd --type d --follow --hidden --exclude .git"
export FZF_ALT_C_OPTS="--preview 'tree -C {}'"
# Options to fzf command
# export FZF_COMPLETION_OPTS='--border --info=inline'

# Use fd (https://github.com/sharkdp/fd) instead of the default find
# command for listing path candidates.
# - The first argument to the function ($1) is the base path to start traversal
# - See the source code (completion.{bash,zsh}) for the details.
_fzf_compgen_path() {
  fd --hidden --follow --exclude ".git" . "$1"
}

# Use fd to generate the list for directory completion
_fzf_compgen_dir() {
  fd --type d --hidden --follow --exclude ".git" . "$1"
}

# Advanced customization of fzf options via _fzf_comprun function
# - The first argument to the function is the name of the command.
# - You should make sure to pass the rest of the arguments to fzf.
_fzf_comprun() {
  local command=$1
  shift

  case "$command" in
    ls)           fzf --preview 'tree -C {} | head -200'   "$@" ;;
    cd)           fzf --preview 'tree -C {} | head -200'   "$@" ;;
    export|unset) fzf --preview "eval 'echo \$'{}"         "$@" ;;
    ssh)          fzf --preview 'dig {}'                   "$@" ;;
    *)            fzf --preview 'bat -n --color=always {}' "$@" ;;
  esac
}
