# vim:filetype=muttrc

set from = "yasser.kaddoura19@gmail.com"
set sendmail = "/bin/sh $my_neomutt_config_folder/bin/sendmail gmail"
set folder = $XDG_DATA_HOME/mail/gmail

set spoolfile = "+INBOX"
set record = "+[Gmail].Sent"
set postponed = "+[Gmail].Drafts"
set trash = "+[Gmail].Trash"
set mbox = "+[Gmail].other"
mailboxes =INBOX\
          =[Gmail].Sent\ Mail\
          =[Gmail].Drafts\
          =[Gmail].Trash\
          =[Gmail].Spam\
          =[Gmail].Archive \
          =[Gmail].All\ Mail\

macro index o "<shell-escape>$XDG_CONFIG_HOME/neomutt/bin/mailsync -V gmail<enter> \
          <sync-mailbox> \
          <shell-escape>polybar-msg action \"#mail.hook.0\" > /dev/null<enter> \
          <shell-escape>notmuch new<enter>" \
          "run mailsync to sync personal"
